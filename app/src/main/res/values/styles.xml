<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_161A21</item>
        <item name="colorPrimaryDark">@color/color_161A21</item>
        <item name="colorAccent">@color/color_161A21</item>
    </style>

    <style name="welcomebg">
        <!--<item name="android:windowBackground">@mipmap/bg_start_man</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="toast_dialog_style">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_dismiss</item>
    </style>

    <style name="toastTopAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/toast_top_in</item>
        <item name="android:windowExitAnimation">@anim/toast_top_out</item>
    </style>

    <style name="EditStyle" parent="android:Animation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/color_161A21</item>
        <item name="android:textColorHint">@color/color_d1d5da</item>
        <item name="android:background">@null</item>
    </style>

    <style name="EditStyle.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="BaseTextStyle" parent="android:Animation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/color_161A21</item>
        <item name="android:textColorHint">@color/color_d1d5da</item>
    </style>

    <style name="BaseTextStyle.12">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="BaseTextStyle.14">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="BaseTextStyle.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="BaseTextStyle.18">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <!-- Button style -->
    <style name="ButtonLongStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:background">@drawable/select_btn_stroke</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonLongStyle_White" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:textColor">@color/color_red</item>
        <item name="android:background">@drawable/select_btn_stroke_white</item>
    </style>

    <style name="ButtonLongStyle_Red" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:background">@drawable/select_btn_red_stroke</item>
    </style>

    <style name="ButtonShortStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/dp_60</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:background">@drawable/select_btn_short_stroke</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonTextStyle" parent="android:Animation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:textColor">@drawable/sele_text_btn</item>
    </style>

    <style name="BtnSwitchStyle" parent="android:Animation">
        <item name="android:layout_width">@dimen/dp_51</item>
        <item name="android:layout_height">@dimen/dp_33</item>
        <item name="android:selectable">false</item>
        <item name="android:background">@drawable/sele_switch_btn</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="BaseViewLine" parent="android:Animation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px_1</item>
        <item name="android:background">@color/color_858998</item>
    </style>

    <style name="BaseViewLine.858998">
        <item name="android:background">@color/color_858998</item>
    </style>

    <style name="BaseViewLine.d1d5da">
        <item name="android:background">@color/color_d1d5da</item>
    </style>

    <style name="BaseViewLine.f0f0f6">
        <item name="android:background">@color/color_f0f0f6</item>
    </style>

    <style name="BaseViewLine.eeeeee">
        <item name="android:background">@color/color_eeeeee</item>
    </style>

    <style name="BaseViewLine.f1f1f1">
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/color_FBFBFB</item>
    </style>

    <style name="text_chat_msgtime_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/com_notice_r8</item>
        <item name="android:textColor">@color/color_858998</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/dp_264</item>
        <item name="tabIndicatorColor">@color/color_00c400</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/color_00c400</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_a5a7ae</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/popupwindow_chatadd_fadein</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_chatadd_fadeout</item>
    </style>
</resources>
