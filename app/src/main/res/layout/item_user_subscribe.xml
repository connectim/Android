<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:background="@drawable/selector_list_item_bg">


    <RelativeLayout
        android:id="@id/relativelayout_1"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_70"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@id/roundimg"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"/>

        <connect.widget.MaterialBadgeTextView
            android:id="@id/badgetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/roundimg_head"
            android:layout_alignRight="@id/roundimg_head"
            android:layout_marginRight="@dimen/dp__8"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@color/color_red"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_8"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_toRightOf="@id/relativelayout_1"
        android:orientation="horizontal">

        <TextView
            android:id="@id/tv_title"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_9"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_24"
            android:textColor="@color/color_161A21"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

    <TextView
        android:id="@id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_9"
        android:textColor="@color/color_b3b5bc"
        android:textSize="@dimen/sp_12"/>
</RelativeLayout>