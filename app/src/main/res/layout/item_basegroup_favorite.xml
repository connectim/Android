<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/top_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_23"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text=""
        android:textColor="@color/color_393939"
        android:textSize="@dimen/sp_12"
        android:visibility="gone" />

    <View
        android:id="@+id/line_view"
        style="@style/BaseViewLine.eeeeee" />

    <LinearLayout
        android:id="@id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_9"
            android:paddingLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_9">

            <View
                android:id="@id/select"
                android:layout_width="@dimen/dp_27"
                android:layout_height="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/sec_pickstate" />

            <connect.widget.DepartmentAvatar
                android:id="@+id/avatar_lin"
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/avatar_rimg"
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="vertical">

            <TextView
                android:id="@id/text_view"
                android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdsd"
                style="@style/BaseTextStyle.14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>