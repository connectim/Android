<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">

    <connect.widget.roundedimageview.RoundedImageView
        android:id="@+id/avater_rimg"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        android:scaleType="fitXY"
        app:riv_corner_radius="@dimen/px_8" />
    <TextView
        android:id="@+id/name_tv"
        style="@style/BaseTextStyle.14"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_toLeftOf="@+id/time_tv"
        android:layout_toRightOf="@+id/avater_rimg"
        android:layout_centerVertical="true"
        android:ellipsize="middle"
        android:maxLines="1"
        android:text="" />

</RelativeLayout>