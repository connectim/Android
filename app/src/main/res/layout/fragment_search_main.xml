<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <TextView
        style="@style/BaseTextStyle.14"
        android:textColor="@color/color_cecece"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="@string/Link_Search_for_specified_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:id="@+id/contact_text"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:textColor="@color/color_767a82"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:text="@string/Link_Contacts" />
        <TextView
            android:id="@+id/group_text"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:textColor="@color/color_767a82"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:text="@string/Link_My_group" />
        <TextView
            android:id="@+id/chat_record_text"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:textColor="@color/color_767a82"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:text="@string/Link_Chat_record" />
        <View
            android:layout_width="0px"
            android:layout_height="@dimen/dp_5"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        style="@style/BaseTextStyle.14"
        android:textColor="@color/color_cecece"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="@string/Link_Commonly_used_search" />

    <connect.widget.XCFlowLayout
        android:id="@+id/xCF_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"/>

</LinearLayout>