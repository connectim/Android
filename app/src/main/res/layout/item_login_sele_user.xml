<?xml version="1.0" encoding="utf-8"?>
<connect.widget.SideScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@id/bottom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/content_layout"
            android:layout_centerVertical="true">
            <View
                android:layout_width="@dimen/px_2"
                android:layout_height="@dimen/dp_36"
                android:layout_gravity="center_vertical"
                android:background="@color/color_spaceline"/>
            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/bottom_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/message_trash2x"
                android:padding="@dimen/dp_10"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <connect.widget.roundedimageview.RoundedImageView
                    android:id="@+id/avater_rimg"
                    android:layout_width="@dimen/dp_38"
                    android:layout_height="@dimen/dp_38"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/name_tv"
                    style="@style/BaseTextStyle.14"
                    android:layout_marginLeft="@dimen/dp_20"/>
            </LinearLayout>
            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/status_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/checklist_icon2x"
                android:layout_marginRight="@dimen/dp_15"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>
</connect.widget.SideScrollView>