<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f6"
    android:orientation="vertical">

    <connect.widget.TopToolBar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/color_white"
        android:scrollbars="none">

        <LinearLayout
            android:id="@id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"></LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <include
            android:id="@id/privateset_searchhistory"
            layout="@layout/include_txt_right_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_white"
        android:orientation="vertical">

        <include
            android:id="@id/top"
            layout="@layout/include_line_toggle" />

        <View
            style="@style/BaseViewLine.eeeeee"
            android:layout_marginLeft="@dimen/dp_15" />

        <include
            android:id="@id/mute"
            layout="@layout/include_line_toggle" />

    </LinearLayout>

    <RelativeLayout
        android:id="@id/clear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_16">

        <TextView
            android:id="@id/private_clear_history"
            style="@style/BaseTextStyle.16"
            android:textColor="@color/color_black" />
    </RelativeLayout>
</LinearLayout>