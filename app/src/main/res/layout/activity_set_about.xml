<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_f1f1f1"
              android:fitsSystemWindows="true">

    <connect.view.TopToolBar
        android:id="@id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:contentDescription="@string/app_name"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_36"
        android:src="@mipmap/logo_black_middle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_68"/>

    <TextView
        android:id="@+id/appVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_32"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_6d6e75"
        android:text="@string/Set_Versions_number"/>

    <LinearLayout
        android:id="@+id/llRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list_item_bg"
        android:layout_marginTop="@dimen/dp_35"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:visibility="gone">
        <TextView
            style="@style/BaseTextStyle.16"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_52"
            android:layout_weight="1"
            android:gravity="center_vertical" />
        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/group_item_arrow"/>
    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff">
        <View
            style="@style/BaseViewLine.eeeeee"
            android:layout_marginLeft="@dimen/dp_15" />
    </LinearLayout>-->

    <LinearLayout
        android:id="@+id/llOpenSource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list_item_bg"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_35"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">
        <TextView
            style="@style/BaseTextStyle.16"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_52"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:text="@string/Set_Open_Source"/>
        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/group_item_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff">
        <View
            style="@style/BaseViewLine.eeeeee"
            android:layout_marginLeft="@dimen/dp_15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/selector_list_item_bg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">
        <TextView
            style="@style/BaseTextStyle.16"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_52"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:text="@string/Set_Check_Update"/>
        <TextView
            android:id="@+id/tvNewVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_007aff"
            android:textSize="@dimen/sp_14"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/group_item_arrow"
            android:layout_marginLeft="@dimen/dp_10"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/app_name_im"
        android:layout_marginTop="@dimen/dp_70"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_161A21"
        android:gravity="center"/>
</LinearLayout>