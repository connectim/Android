<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:gravity="center_horizontal">

    <connect.widget.TopToolBar
        android:id="@id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@id/userhead_img"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@mipmap/singup_camera3x"
        android:scaleType="fitXY"/>

    <EditText
        android:id="@id/nickname_et"
        style="@style/EditStyle.16"
        android:layout_height="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_10"
        android:hint="@string/Set_Name"
        android:maxLength="10"/>
    <View
        style="@style/BaseViewLine.d1d5da"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"/>
    <EditText
        android:id="@id/password_et"
        style="@style/EditStyle.16"
        android:layout_height="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_10"
        android:inputType="textPassword"
        android:hint="@string/Login_Password_Standard_Tip"/>
    <View
        style="@style/BaseViewLine.d1d5da"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15">
        <TextView
            android:id="@id/passwordhint_tv"
            style="@style/BaseTextStyle"
            android:text="@string/Login_Password_Hint"/>

        <TextView
            android:id="@id/passwordedit_tv"
            style="@style/BaseTextStyle"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="@string/Login_Edit"
            android:textColor="@color/color_007aff"/>
    </LinearLayout>

    <TextView
        style="@style/BaseTextStyle"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:text="@string/Login_Password_explain"/>

    <Button
        style="@style/ButtonLongStyle"
        android:id="@id/next_btn"
        android:layout_marginTop="@dimen/dp_15"
        android:enabled="false"
        android:text="@string/Chat_Complete"/>

</LinearLayout>