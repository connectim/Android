<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lin_pop_orherlogin"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="bottom"
              android:orientation="vertical"
              android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_20px_e6f6f6f6"
        android:orientation="vertical">

        <connect.ui.activity.chat.view.PickHorScrollView
            android:id="@id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>
        </connect.ui.activity.chat.view.PickHorScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_9b9b9b"/>

        <TextView
            android:id="@id/photo_library"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:gravity="center"
            android:text="@string/Chat_Photo_libary"
            android:textColor="@color/color_007aff"
            android:textSize="@dimen/sp_18"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/shape_8px_ffffff">

        <TextView
            android:id="@id/cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:gravity="center"
            android:text="@string/Common_Cancel"
            android:textColor="@color/color_007aff"
            android:textSize="@dimen/sp_18"/>
    </RelativeLayout>
</LinearLayout>