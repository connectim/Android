<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/showtime"
              android:gravity="right"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <connect.activity.chat.view.MsgStateView
            android:id="@id/msgstateview"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"/>

        <connect.activity.chat.view.BurnProBar
            android:id="@id/burnprogressbar"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_2"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_2"
        android:paddingTop="@dimen/dp_2">

        <connect.activity.chat.view.BubbleImg
            android:id="@id/imgmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgmsg"
            android:layout_alignLeft="@id/imgmsg"
            android:layout_alignRight="@id/imgmsg"
            android:layout_marginRight="@dimen/dp_6"
            android:background="@drawable/shape_bg_locbottom"
            android:gravity="left"
            android:paddingTop="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_2"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_10"/>
    </RelativeLayout>

    <connect.widget.ChatHeadImg
        android:id="@id/roundimg_head"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:scaleType="centerCrop"/>
</LinearLayout>