<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f6">

    <connect.view.TopToolBar
        android:id="@id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical">
        <TextView
            android:id="@+id/transfer_friend_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57"
            android:paddingLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            android:text="@string/Wallet_Transfer_to_Friends"
            android:background="@drawable/selector_list_item_bg"
            android:drawableLeft="@mipmap/wallet_sendto_friends2x"
            android:drawablePadding="@dimen/dp_12"/>

        <View
            style="@style/BaseViewLine.d1d5da"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:id="@+id/transfer_address_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57"
            android:paddingLeft="@dimen/dp_15"
            android:text="@string/Wallet_Transfer_to_Bitcoin_Address"
            android:gravity="center_vertical"
            android:background="@drawable/selector_list_item_bg"
            android:drawableLeft="@mipmap/wallet_sendto_bitcoin2x"
            android:drawablePadding="@dimen/dp_12"/>

        <View
            style="@style/BaseViewLine.d1d5da"
            android:layout_marginLeft="@dimen/dp_15"/>

        <TextView
            android:id="@+id/transfer_outVia_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57"
            android:paddingLeft="@dimen/dp_15"
            android:text="@string/Wallet_Transfer_via_other_APP_messges"
            android:gravity="center_vertical"
            android:background="@drawable/selector_list_item_bg"
            android:drawableLeft="@mipmap/wallet_sendto_messages2x"
            android:drawablePadding="@dimen/dp_12"/>
    </LinearLayout>

    <TextView
        android:id="@+id/lately_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_161A21"
        android:background="@color/color_f1f1f1"
        android:text="@string/Wallet_Recent_transfer"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_15"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="@dimen/px_1"
        android:background="@color/color_ffffff"
        android:divider="@color/color_d1d5da"/>

</LinearLayout>