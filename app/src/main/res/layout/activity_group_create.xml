<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <connect.widget.TopToolBar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@id/edittxt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_stroke_20_ffffff"
        android:maxLength="10"
        android:maxLines="1"
        android:padding="@dimen/dp_10"/>

    <View
        style="@style/BaseViewLine.d1d5da"
        android:layout_marginLeft="@dimen/dp_15"/>

    <include
        android:id="@id/groupset_category"
        layout="@layout/include_line_toggle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"/>

    <TextView
        android:id="@id/groupset_category_explain"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_22"
        android:layout_gravity="right"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_15"
        android:textColor="@color/color_b3b5bc"
        android:textSize="@dimen/sp_12"/>

    <android.support.v7.widget.RecyclerView
        android:id="@id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:overScrollMode="never"/>
</LinearLayout>
