<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_activity"
    android:orientation="vertical">

    <connect.widget.TopToolBar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_22"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_15"
        android:text="@string/Link_Group_Name"
        android:textColor="@color/color_b3b5bc"
        android:textSize="@dimen/sp_12"/>

    <EditText
        android:id="@id/edittxt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:inputType="text"
        android:background="@drawable/shape_stroke_20_ffffff"
        android:maxLength="10"
        android:maxLines="1"
        android:padding="@dimen/dp_10"/>

    <android.support.v7.widget.RecyclerView
        android:id="@id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:overScrollMode="never"/>
</LinearLayout>
