<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/color_f0f0f6"
              android:orientation="vertical">

    <connect.view.TopToolBar
        android:id="@id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/llUserMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list_item_bg"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="20dp">

        <connect.view.roundedimageview.RoundedImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:scaleType="fitXY"
            app:riv_corner_radius="@dimen/px_6"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/ivAvatar"
            android:layout_toLeftOf="@+id/address_scan_img"
            android:layout_marginLeft="@dimen/dp_16">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_161A21"
                android:textSize="@dimen/sp_18"
                android:maxLength="15"
                android:lines="1"
                android:ellipsize="end"
                android:text=""/>
            
            <TextView
                android:id="@+id/tvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/color_9b9b9b"
                android:textSize="@dimen/sp_12"
                android:maxLines="2"
                android:ellipsize="end"
                android:drawableLeft="@mipmap/contract_info_id3x"
                android:gravity="center_vertical"
                android:text=""
                android:drawablePadding="@dimen/dp_10"/>
        </RelativeLayout>

        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/address_scan_img"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/setting_my_qrcode"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/right_arrow"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_8"/>

        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/group_item_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llSafety"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_list_item_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_52"
                android:layout_weight="1"
                style="@style/BaseTextStyle.16"
                android:background="@color/color_clear"
                android:gravity="center_vertical"
                android:text="@string/Set_Account_security"/>
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/group_item_arrow"/>
        </LinearLayout>

        <View
            style="@style/BaseViewLine.eeeeee"
            android:layout_marginLeft="@dimen/dp_15"/>

        <LinearLayout
            android:id="@+id/llPrivate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_list_item_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_52"
                android:layout_weight="1"
                style="@style/BaseTextStyle.16"
                android:gravity="center_vertical"
                android:background="@color/color_clear"
                android:text="@string/Set_Privacy"/>
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/group_item_arrow"/>
        </LinearLayout>

        <View
            style="@style/BaseViewLine.eeeeee"
            android:layout_marginLeft="@dimen/dp_15"/>

        <LinearLayout
            android:id="@+id/llChatSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_list_item_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_52"
                android:layout_weight="1"
                style="@style/BaseTextStyle.16"
                android:gravity="center_vertical"
                android:background="@color/color_clear"
                android:text="@string/Set_General"/>
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/group_item_arrow"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/color_ffffff"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/llProblem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_list_item_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_52"
                android:layout_weight="1"
                style="@style/BaseTextStyle.16"
                android:gravity="center_vertical"
                android:text="@string/Set_Help_and_feedback"/>
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/group_item_arrow"/>
        </LinearLayout>

        <View
            style="@style/BaseViewLine.eeeeee"
            android:layout_marginLeft="@dimen/dp_15"/>

        <LinearLayout
            android:id="@+id/llAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_list_item_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15">
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_52"
                android:layout_weight="1"
                style="@style/BaseTextStyle.16"
                android:gravity="center_vertical"
                android:text="@string/Set_About"/>
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/group_item_arrow"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/log_out_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_8px_ffffff"
        android:gravity="center"
        android:text="@string/Set_Log_Out"
        android:textColor="@color/color_f53333"
        android:textSize="@dimen/sp_16"/>

</LinearLayout>