<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/color_f0f0f6">

    <connect.widget.TopToolBar
        android:id="@id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/phone_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:background="@drawable/selector_list_item_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">
            <TextView
                style="@style/BaseTextStyle.16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/Set_Phone" />
            <TextView
                android:id="@+id/phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_a5a7ae"
                android:textSize="@dimen/sp_16"/>
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/group_item_arrow"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>

        <View
            style="@style/BaseViewLine.eeeeee"
            android:layout_marginLeft="@dimen/dp_15" />

        <LinearLayout
            android:id="@+id/password_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:background="@drawable/selector_list_item_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">
            <TextView
                style="@style/BaseTextStyle.16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/Login_Password" />
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/group_item_arrow"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/payment_line_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <View
                style="@style/BaseViewLine.eeeeee"
                android:layout_marginLeft="@dimen/dp_15" />
            <LinearLayout
                android:id="@+id/payment_ll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:background="@drawable/selector_list_item_bg"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">\
                <TextView
                    style="@style/BaseTextStyle.16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/Set_Payment" />
                <ImageView
                    android:contentDescription="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/group_item_arrow"
                    android:layout_marginLeft="@dimen/dp_10"/>
            </LinearLayout>
            <View
                style="@style/BaseViewLine.eeeeee"
                android:layout_marginLeft="@dimen/dp_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pattern_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:background="@drawable/selector_list_item_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:visibility="gone">
            <TextView
                style="@style/BaseTextStyle.16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/Set_Pattern_Password" />
            <TextView
                android:id="@+id/pattern_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_a5a7ae"
                android:textSize="@dimen/sp_16"/>
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/group_item_arrow"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>