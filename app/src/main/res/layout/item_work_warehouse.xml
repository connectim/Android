<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item_bg"
    android:id="@+id/content_linear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">
        <TextView
            android:id="@+id/type_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/BaseTextStyle.14"
            android:gravity="center_vertical"
            android:text=""/>
        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BaseTextStyle.14"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/Wallet_Unconfirmed"
            android:textColor="@color/color_3081EA"
            android:layout_marginRight="@dimen/dp_15"/>
        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/item_arrow_right_black"/>
    </LinearLayout>

    <View
        style="@style/BaseViewLine"
        android:background="@color/color_E0E0E0"/>

    <TextView
        android:id="@+id/time_tv"
        style="@style/BaseTextStyle.12"
        android:textColor="@color/color_A5A5A5"
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:text="" />

</LinearLayout>