<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F6F6F6">

    <connect.widget.TopToolBar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="20dp">

        <RelativeLayout
            android:id="@+id/avatar_rela"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45">
            <ImageView
                android:id="@+id/avatar_imageview"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:visibility="gone"/>
            <connect.widget.DepartmentAvatar
                android:id="@+id/avatar_image"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/avatar_rela"
            android:layout_marginLeft="@dimen/dp_12">
            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_161A21"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_18"
                android:maxLength="15"
                android:ellipsize="end"
                android:text="" />
            <ImageView
                android:id="@+id/gender_image"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:id="@+id/sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_toRightOf="@+id/avatar_rela"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_alignBottom="@+id/avatar_rela"
            android:textColor="@color/color_9b9b9b"
            android:textSize="@dimen/sp_12"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text=""
            android:drawablePadding="@dimen/dp_10"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_8E8E8E"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="@string/Link_Employee_number"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@color/color_ffffff">
        <TextView
            android:id="@+id/number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_8E8E8E"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_8E8E8E"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="@string/Link_Subordinate_departments"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@color/color_ffffff">
        <TextView
            android:id="@+id/department_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_8E8E8E"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_8E8E8E"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="@string/Link_Contact_number"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@color/color_ffffff">
        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_8E8E8E"
            android:textSize="@dimen/sp_14" />
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/cell_image"
            android:background="@color/color_F6F6F6"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"/>
        <ImageView
            android:id="@+id/cell_image"
            android:layout_width="@dimen/dp_45"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:src="@mipmap/call_phone"/>
    </RelativeLayout>

    <Button
        android:id="@+id/chat_btn"
        style="@style/ButtonLongStyle"
        android:layout_marginTop="@dimen/dp_50"
        android:text="@string/Chat_Chats"/>

</LinearLayout>