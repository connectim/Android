<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/showtime"
              android:gravity="right"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_5"
        android:orientation="horizontal">

        <connect.activity.chat.view.MsgStateView
            android:id="@id/msgstateview"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/message_box_green_right2x"
        android:gravity="center">

        <connect.activity.chat.view.VoiceImg
            android:id="@id/voicemsg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"/>
    </RelativeLayout>

    <connect.widget.ChatHeadImg
        android:id="@id/roundimg_head"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:scaleType="centerCrop"/>
</LinearLayout>