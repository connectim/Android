<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/showtime"
              android:gravity="right">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_6"
        android:orientation="horizontal">

        <connect.ui.activity.chat.view.MsgStateView
            android:id="@id/msgstateview"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"/>

        <connect.ui.activity.chat.view.BurnProBar
            android:id="@id/burnprogressbar"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="@dimen/dp_240"
        android:layout_height="wrap_content"
        android:background="@mipmap/message_box_loaction_right2x"
        android:paddingBottom="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_17"
        android:paddingTop="@dimen/dp_12">

        <TextView
            android:id="@id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@id/txt3"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/color_858998"
            android:textSize="@dimen/sp_10"/>

        <connect.view.roundedimageview.RoundedImageView
            android:id="@id/roundimg1"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt2"/>
    </RelativeLayout>

    <connect.view.ChatHeadImg
        android:id="@id/roundimg_head"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:scaleType="centerCrop"/>
</LinearLayout>