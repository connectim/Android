<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white">

    <ImageView
        android:contentDescription="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_100"
        android:src="@mipmap/logo_black_middle"/>

    <RelativeLayout
        android:id="@+id/country_rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:background="@drawable/selector_list_item_bg">
        <TextView
            android:id="@+id/country_tv"
            style="@style/BaseTextStyle.16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""/>
        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/group_item_arrow"/>
    </RelativeLayout>
    <View
        style="@style/BaseViewLine.d1d5da"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"/>

    <EditText
        android:id="@id/phone_et"
        style="@style/EditStyle"
        android:layout_height="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_10"
        android:inputType="phone"
        android:hint="@string/Set_Your_Phone"
        android:text=""/>
    <View
        style="@style/BaseViewLine.d1d5da"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"/>

    <Button
        android:id="@id/next_btn"
        style="@style/ButtonLongStyle"
        android:layout_marginTop="@dimen/dp_25"
        android:enabled="false"
        android:text="@string/Set_Verify_Phone"/>

    <TextView
        style="@style/BaseTextStyle"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:text="@string/Set_After_verified_your_phone_login_on_another_phone"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="horizontal">
        <TextView
            style="@style/BaseTextStyle"
            android:text="@string/Set_or" />
        <TextView
            android:id="@+id/backup_local_tv"
            style="@style/BaseTextStyle"
            android:padding="@dimen/dp_5"
            android:textColor="@color/color_007aff"
            android:text="@string/Set_Import_your_local_private_key_backup"/>
    </LinearLayout>

</LinearLayout>