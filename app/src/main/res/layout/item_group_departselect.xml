<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_rela"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/department_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:background="@drawable/selector_list_item_bg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <View
            android:id="@+id/department_select"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:layout_gravity="center_vertical"
            android:background="@drawable/sec_pickstate" />

        <ImageView
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_22"
            android:scaleType="fitXY"
            android:src="@mipmap/department_two" />

        <TextView
            android:id="@+id/department_tv"
            style="@style/BaseTextStyle.16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="" />

        <TextView
            android:id="@+id/count_tv"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_a5a7ae"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/group_item_arrow" />
    </LinearLayout>

    <RelativeLayout
        android:id="@id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list_item_bg"
        android:paddingBottom="@dimen/dp_9"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_9">

        <View
            android:id="@+id/workmate_select"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:layout_gravity="center_vertical"
            android:background="@drawable/sec_pickstate" />


        <connect.widget.DepartmentAvatar
            android:id="@+id/avatar_rimg"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/workmate_select"
            android:layout_toRightOf="@+id/workmate_select" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toLeftOf="@+id/status_btn"
            android:layout_toRightOf="@+id/avatar_rimg"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nickname_tv"
                style="@style/BaseTextStyle.16"
                android:ellipsize="middle"
                android:lines="1"
                android:text="" />

            <TextView
                android:id="@+id/hint_tv"
                style="@style/BaseTextStyle"
                android:lines="1"
                android:text=""
                android:textColor="@color/color_858998" />
        </LinearLayout>

        <Button
            android:id="@+id/status_btn"
            style="@style/ButtonShortStyle"
            android:layout_width="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>