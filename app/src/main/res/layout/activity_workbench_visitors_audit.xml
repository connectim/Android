<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F6F6F6">

    <connect.widget.TopToolBar
        android:id="@id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:padding="@dimen/dp_15"
        style="@style/BaseTextStyle.14"
        android:gravity="center_vertical"
        android:text=""/>

    <View
        style="@style/BaseViewLine"
        android:background="@color/color_E0E0E0"/>

    <TextView
        android:id="@+id/reason_tv"
        style="@style/BaseTextStyle.12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:textColor="@color/color_A5A5A5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:text="" />

    <TextView
        android:id="@+id/phone_tv"
        style="@style/BaseTextStyle.12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:textColor="@color/color_A5A5A5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:text="" />

    <TextView
        android:id="@+id/time_tv"
        style="@style/BaseTextStyle.12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:textColor="@color/color_A5A5A5"
        android:padding="@dimen/dp_15"
        android:text="" />

    <View
        style="@style/BaseViewLine"
        android:background="@color/color_E0E0E0"/>

    <TextView
        style="@style/BaseTextStyle.12"
        android:layout_width="match_parent"
        android:textColor="@color/color_8E8E8E"
        android:padding="@dimen/dp_15"
        android:text="@string/Work_Visitors_Facial_information" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_30"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/left_face_text"
                style="@style/BaseTextStyle.12"
                android:layout_alignLeft="@+id/left_face_image"
                android:layout_width="wrap_content"
                android:textColor="@color/color_8E8E8E"
                android:text="@string/Work_Visitors_Left_face"/>
            <ImageView
                android:id="@+id/left_face_image"
                android:layout_below="@+id/left_face_text"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_12"
                android:scaleType="fitXY"
                android:src="@mipmap/img_default"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/is_face_text"
                style="@style/BaseTextStyle.12"
                android:layout_alignLeft="@+id/is_face_image"
                android:layout_width="wrap_content"
                android:textColor="@color/color_8E8E8E"
                android:text="@string/Work_Visitors_Is_face"/>
            <ImageView
                android:id="@+id/is_face_image"
                android:layout_below="@+id/is_face_text"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_12"
                android:scaleType="fitXY"
                android:src="@mipmap/img_default"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/right_face_text"
                style="@style/BaseTextStyle.12"
                android:layout_alignLeft="@+id/right_face_image"
                android:layout_width="wrap_content"
                android:textColor="@color/color_8E8E8E"
                android:text="@string/Work_Visitors_Right_face"/>
            <ImageView
                android:id="@+id/right_face_image"
                android:layout_below="@+id/right_face_text"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_12"
                android:scaleType="fitXY"
                android:src="@mipmap/img_default"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            style="@style/BaseViewLine.eeeeee"
            android:layout_above="@+id/bottom_lin"
            android:background="@color/color_D2D2D2"/>
        <LinearLayout
            android:id="@+id/bottom_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/refuse_text"
                style="@style/BaseTextStyle.14"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_list_item_bg"
                android:gravity="center"
                android:text="@string/Link_Refuse"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_D2D2D2"/>
            <TextView
                android:id="@+id/agree_text"
                style="@style/BaseTextStyle.14"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/selector_list_item_bg"
                android:text="@string/Chat_Agree"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>