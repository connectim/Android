<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/color_f1f1f1"
              android:orientation="horizontal">

    <RelativeLayout
        android:id="@id/bottom_trash"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_72"
        android:gravity="center">

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/message_trash2x"/>
    </RelativeLayout>

    <View
        android:layout_width="@dimen/px_2"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center_vertical"
        android:background="@color/color_spaceline"/>

    <RelativeLayout
        android:id="@id/bottom_notify"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_72"
        android:gravity="center">

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/message_notify_enable2x"/>
    </RelativeLayout>
</LinearLayout>