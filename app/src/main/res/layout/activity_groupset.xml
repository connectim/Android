<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0f0f6"
    android:orientation="vertical">

    <connect.widget.TopToolBar
        android:id="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@id/linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:orientation="horizontal"></LinearLayout>
                </HorizontalScrollView>

                <RelativeLayout
                    android:id="@id/relativelayout_1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_70"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingTop="@dimen/dp_30">

                    <ImageView
                        android:id="@id/img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/group_item_arrow" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_ffffff"
                android:orientation="vertical">

                <include
                    android:id="@id/groupset_groupname"
                    layout="@layout/include_txt_right_txt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"
                android:background="@color/color_ffffff"
                android:orientation="vertical">

                <include
                    android:id="@id/groupset_searchhistory"
                    layout="@layout/include_txt_right_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_56" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_white"
                android:orientation="vertical">

                <include
                    android:id="@id/top"
                    layout="@layout/include_line_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_42" />

                <View
                    style="@style/BaseViewLine.d1d5da"
                    android:layout_marginLeft="@dimen/dp_15" />

                <include
                    android:id="@id/mute"
                    layout="@layout/include_line_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_42" />

                <View
                    style="@style/BaseViewLine.d1d5da"
                    android:layout_marginLeft="@dimen/dp_15" />

                <include
                    android:id="@id/save"
                    layout="@layout/include_line_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_42" />
            </LinearLayout>

            <RelativeLayout
                android:id="@id/clear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_16">

                <TextView
                    android:id="@id/groupset_clear_history"
                    style="@style/BaseTextStyle.16"
                    android:textColor="@color/color_black" />
            </RelativeLayout>

            <Button
                android:id="@id/groupset_exit_group"
                style="@style/ButtonLongStyle_Red"
                android:layout_marginTop="@dimen/dp_36"
                android:text="@string/Link_Delete_and_Leave" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>