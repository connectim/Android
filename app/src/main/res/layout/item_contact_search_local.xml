<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_eceef3"
    android:orientation="vertical">

    <TextView
        android:id="@id/txt"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="@color/color_f1f1f1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:textColor="@color/color_161A21"
        android:textSize="@dimen/sp_12"/>
    <RelativeLayout
        android:id="@+id/content_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:background="@drawable/selector_list_item_bg">
        <ImageView
            android:id="@+id/avatar_rimg"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/avatar_rimg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20">
            <TextView
                android:id="@+id/name_tv"
                style="@style/BaseTextStyle.14"
                android:textStyle="bold"
                android:text=""/>
            <TextView
                android:id="@+id/line_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_5" />
            <TextView
                android:id="@+id/ou_tv"
                style="@style/BaseTextStyle.12"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/color_A6A6A6"
                android:text="" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>